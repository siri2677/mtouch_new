<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/menuImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="10dp"
            android:padding="10dp"
            android:src="@drawable/menu" />

        <ImageView
            android:layout_width="89.8dp"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:src="@drawable/logo3" />

    </FrameLayout>

    <LinearLayout
        android:id="@+id/paymentIdSelectLayout"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="57dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="13.5dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/round_gradient_shape"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/mchtNameTextView"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/ns_acb"
                android:gravity="center_vertical"
                android:textColor="@color/white"
                android:textSize="15dp"
                tools:text="주식회사 광원" />

            <TextView
                android:id="@+id/terminalIdTextView"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/ns_acr"
                android:gravity="center_vertical|end"
                android:textColor="@color/white"
                android:textSize="15dp"
                tools:text="Test0003" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/round_gradient_shape"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/ns_acr"
            android:text="일간매출내역"
            android:textColor="@color/white"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/dailyTotalTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/ns_aceb"
            android:gravity="end"
            android:paddingTop="0dp"
            android:paddingBottom="0dp"
            android:text="0 원"
            android:textColor="@color/white"
            android:textSize="30dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="9.3dp"
            android:background="@color/white" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="9dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/ns_acr"
                android:text="일간취소내역"
                android:textColor="@color/white"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/dailyCancelTotalTextView"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/ns_acb"
                android:gravity="center_vertical|end"
                android:text="0 원"
                android:textColor="@color/white"
                android:textSize="15dp" />

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="12.5dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/round_gradient_shape"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/ns_acr"
            android:text="월간매출내역"
            android:textColor="@color/white"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/monthlyTotalTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/ns_aceb"
            android:gravity="end"
            android:paddingTop="0dp"
            android:paddingBottom="0dp"
            android:text="0 원"
            android:textColor="@color/white"
            android:textSize="30dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="9.3dp"
            android:background="@color/white" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="9dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/ns_acr"
                android:text="월간취소내역"
                android:textColor="@color/white"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/mouthlyCancelTotalTextView"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/ns_acb"
                android:gravity="center_vertical|end"
                android:text="0 원"
                android:textColor="@color/white"
                android:textSize="15dp" />

        </LinearLayout>


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_marginTop="17.5dp"
        android:layout_marginBottom="17.5dp"
        android:background="@color/white_four" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/creditPaymentButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/card_bt"
                android:clickable="true"
                android:gravity="center"
                android:orientation="vertical"
                android:weightSum="80">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="42"
                    android:scaleType="centerInside"
                    android:src="@drawable/card_icon_main" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14.5dp"
                    android:fontFamily="@font/ns_acr"
                    android:text="신용카드"
                    android:textColor="@color/black_three"
                    android:textSize="15dp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/cashPaymentButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/card_bt"
                android:clickable="true"
                android:gravity="center"
                android:orientation="vertical"
                android:weightSum="80">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="42"
                    android:scaleType="centerInside"
                    android:src="@drawable/receipt_icon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14.5dp"
                    android:fontFamily="@font/ns_acr"
                    android:text="현금영수증"
                    android:textColor="@color/black_three"
                    android:textSize="15dp" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/historyButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/card_bt"
                android:clickable="true"
                android:gravity="center"
                android:orientation="vertical"
                android:weightSum="80">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="42"
                    android:scaleType="centerInside"
                    android:src="@drawable/payment_icon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14.5dp"
                    android:fontFamily="@font/ns_acr"
                    android:text="거래내역"
                    android:textColor="@color/black_three"
                    android:textSize="15dp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/totalButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/card_bt"
                android:clickable="true"
                android:gravity="center"
                android:orientation="vertical"
                android:weightSum="80">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="42"
                    android:scaleType="centerInside"
                    android:src="@drawable/total_icon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14.5dp"
                    android:fontFamily="@font/ns_acr"
                    android:text="집계내역"
                    android:textColor="@color/black_three"
                    android:textSize="15dp" />

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/capBankLayout"
        tools:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5.5dp"
        android:layout_marginEnd="20dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginEnd="10dp"
            android:fontFamily="@font/ns_acb"
            android:gravity="center_vertical"
            android:text="정산계좌"
            android:textColor="@color/black_two"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/bankNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:fontFamily="@font/ns_acr"
            android:gravity="center_vertical"
            android:textColor="@color/black_two"
            android:textSize="12dp"
            tools:text="산업은행" />

        <TextView
            android:id="@+id/accountTextView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:fontFamily="@font/ns_acr"
            android:gravity="center"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:textColor="@color/black_two"
            android:textSize="12dp"
            tools:text="123412341234123123" />

        <TextView
            android:id="@+id/accountHolderTextView"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="@font/ns_acr"
            android:gravity="center_vertical|end"
            android:textColor="@color/black_two"
            android:textSize="12dp"
            tools:text="주식회사광원홍길동이사장회장사장" />
        <!--        android:lines="1"-->
        <!--        android:ellipsize="end"-->

    </LinearLayout>

    <LinearLayout
        android:id="@+id/cancelBankLayout"
        tools:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5.5dp"
        android:layout_marginEnd="20dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:fontFamily="@font/ns_acb"
            android:gravity="center_vertical"
            android:text="취소입금계좌"
            android:textColor="@color/black_two"
            android:textSize="15dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="@font/ns_acr"
            android:gravity="center_vertical|end"
            android:text="우리은행 1005-902-772439 주식회사 케이원피에스"
            android:textColor="@color/black_two"
            android:textSize="12dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/serviceButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/ns_acr"
            android:gravity="center"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:text="고객센터"
            android:textColor="@color/brownish_grey"
            android:textSize="15dp" />

        <View
            android:layout_width="0.5dp"
            android:layout_height="14dp"
            android:layout_gravity="center_vertical"
            android:background="@color/brownish_grey" />

        <TextView
            android:id="@+id/settingButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/ns_acr"
            android:gravity="center"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:text="설정"
            android:textColor="@color/brownish_grey"
            android:textSize="15dp" />

    </LinearLayout>

</LinearLayout>